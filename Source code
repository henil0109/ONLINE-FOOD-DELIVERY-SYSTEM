# ğŸšš Order Status Page
def status_page():
    with gr.Blocks() as status:
        gr.Markdown("<h2>ğŸšš Update Order Status</h2>")
        
        order_id_input = gr.Number(label="ğŸ“¦ Order ID")
        status_dropdown = gr.Dropdown(label="ğŸšš Update Status", choices=["Pending", "In Progress", "Delivered"])
        update_btn = gr.Button("âœ… Update Status")
        status_output = gr.Textbox(label="ğŸ“œ Status Update", interactive=False)

        update_btn.click(update_status, inputs=[order_id_input, status_dropdown], outputs=status_output)
    
    return status

# ğŸ“Š Summary & Revenue Page
def summary_page():
    with gr.Blocks() as summary:
        gr.Markdown("<h2>ğŸ“Š Summary & Revenue Charts</h2>")
        summary_text = gr.Textbox(label="ğŸ“œ Summary", interactive=False)
        summary_chart = gr.Image(label="ğŸ“Š Revenue & Order Status Chart", interactive=False)

        generate_btn = gr.Button("ğŸ“ˆ Generate Summary & Charts")
        generate_btn.click(generate_summary, outputs=[summary_text, summary_chart])

    return summary

# ğŸŒŸ Combine All Pages (Now with Summary Page)
app = gr.TabbedInterface(
    [home(), order_page(), status_page(), summary_page()],
    ["ğŸ  Home", "ğŸ›’ Place Order", "ğŸšš Order Status", "ğŸ“Š Summary & Revenue"]
)

# ğŸš€ Launch Application
app.launch()
